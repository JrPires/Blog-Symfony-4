{% extends 'base.html.twig' %}
{% block body %}
    <form action="{{ path('post_update', {'id': post.id}) }}" method="post">
        <p>
            <label>Título da Postagem</label>
            <input type="text" name="title" value="{{ post.titulo }}">
        </p>
        <p>
            <label>Destrição da Postagem</label>
            <input type="text" name="descrition" value="{{ post.description }}">
        </p>
        <p>
            <label>Conteúdo da Postagem</label>
            <textarea name="content" id="" cols="30" rows="10">{{ post.content }}</textarea>
        </p>
        <p>
            <label>Slug</label>
            <input type="text" name="slug" value="{{ post.slug }}">
        </p>

        <button type="submit">Criar Postagem</button>
    </form>
{% endblock %}
{% block title %}
    Edição de Post
{% endblock %}